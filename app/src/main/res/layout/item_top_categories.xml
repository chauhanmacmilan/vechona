<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <com.vechona.com.ui.custom.CircleImageView
        android:id="@+id/ivCategory"
        android:layout_width="@dimen/spacing_xxxgigantic"
        android:layout_height="@dimen/spacing_xxxgigantic"
        android:elevation="@dimen/spacing_xxsmall"
        app:civ_border_color="@color/white"
        app:civ_border_width="6dp"
        tool:srcCompat="@drawable/image3" />

    <TextView
        android:id="@+id/tvCategotyName"
        android:layout_width="@dimen/spacing_xxgigantic"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:fontFamily="@font/muli_regular"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_medium"
        tool:text="Image" />

</LinearLayout>